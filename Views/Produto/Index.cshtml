@{
    Layout = "_Layout";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <link rel="stylesheet" href="~/css/produto.css" type="text/css">
    <title>Login</title>
</head>

<body>
    <nav class="nav">
        <div id="logo">
            <img src="img/logo.png" alt="logotipo">
        </div>
        <ul>
            <li><a href='@Url.Action("Index", "Home")'>Voltar</a></li>
        </ul>
    </nav>

    <div class="linha_amr"></div>

    <section>
        <h2>Compra</h2>
        <div class="options">
            <form action="Login/LogarUsuario" method="POST">
                <input type="text" name="email" placeholder="E-mail" id="email" required>
                <input type="password" name="senha" id="senha" placeholder="Senha" required>
            
                <input type="submit" value="Confirmar" id="botao" onclick='alert("Teste")'>
            </form>
        </div>
    </section>