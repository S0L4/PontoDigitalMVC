@{
    Layout = "_Layout";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <link rel="stylesheet" href="~/css/login.css" type="text/css">
    <title>Dashboard</title>
</head>

<nav class="nav">
    <div id="logo">
        <img src="img/logo.png" alt="logotipo">
    </div>
    <ul>
        <li><a href='@Url.Action("Usuarios", "Administrador")'>Lista de Usuários</a></li>
        <li><a href='@Url.Action("Comentarios", "Administrador")'>Lista de Comentários</a></li>
        <li><a id="bt_logout" asp-controller="Login" asp-action="Logout">Logout</a></li>
    </ul>
</nav>

<div class="linha_amr"></div>  

<section>
        
    <h2>Informações</h2>
    <div class="dashboard">

        <div class="info" id="usuarios">
            <p>Total de usuários cadastrados: 
                <br>
                @ViewData["quantidadeDeUsuarios"]</p>
        </div>

        <div class="info" id="comentarios">
            <p>Total de comentários: 
                <br>
                @ViewData["quantidadeDeComentarios"]</p>
        </div>

        <div class="info" id="comentarios_aprovados">
            <p>Total de comentários aprovados: 
                <br>

            </p>
        </div>

        <div class="info" id="comentarios_rejeitados">
            <p>Total de comentários reprovados: 
                <br>
                
            </p>
        </div>

    </div>
</section>