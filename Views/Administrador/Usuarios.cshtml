@model PontoDigitalMVC.ViewModel.ListasViewModel
@{
    Layout = "_Layout";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <link rel="stylesheet" href="~/css/listas.css" type="text/css">
    <title>Lista De Usuários</title>
</head>

<nav class="nav">
    <div id="logo">
        <img src="img/logo.png" alt="logotipo">
    </div>
    <ul>
        <li><a href='@Url.Action("Usuarios", "Administrador")'>Lista de Usuários</a></li>
        <li><a href='@Url.Action("Comentarios", "Administrador")'>Lista de Comentários</a></li>
        <li><a href='@Url.Action("Index", "Administrador")'>Voltar</a></li>
        <li><a id="bt_logout" asp-controller="Login" asp-action="Logout">Logout</a></li>
    </ul>
</nav>

<div class="linha_amr"></div>  

<div class="container">
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Senha</th>
            <th>Data de Nascimento</th>
        </tr>
    </thead>
    <tbody>

        @foreach(var u in Model.Usuarios)
            {
                <td>@u.Id</td>
                <td>@u.Nome</td>
                <td>@u.Email</td>
                <td>@u.Senha</td>
                <td>@u.DataNascimento</td>
            }
    </tbody>
</table>
</div>
